<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lej.mybatis.mapper.StudentMapper2">
  
  <select id="findAll" resultType="Student2">
    SELECT * FROM student ORDER BY id DESC    
  </select>

  <select id="findById" resultType="Student2" parameterType="long">
  SELECT * FROM student WHERE id = #{id}
  </select>


  <insert id="insert" parameterType="Student2" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO student(NAME, email, age) VALUES
		(#{name}, #{email}, #{age})
  </insert>
  
  <update id="update" parameterType="Student2">
		UPDATE student
		SET NAME = #{name}, email = #{email}, age = #{age}
		WHERE id = #{id}
  </update>
  
  <delete id="delete" parameterType="long">
		DELETE FROM student WHERE id = #{id} 
  </delete>
  
</mapper>